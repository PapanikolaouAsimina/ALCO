{
    "tasks": [
        {
            "type": "shell",
            "label": "cland++ build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
            
                 "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
           
        }
    ],
    "version": "2.0.0"
}